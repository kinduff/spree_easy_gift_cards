<% content_for :page_title do %>
  <%= link_to Spree.t(:gift_cards), admin_gift_cards_path %> /
  <%= @gift_card.recipient_email %>
<% end %>

<% content_for :page_actions do %>
  <% if can?(:create, Spree::GiftCard) %>
    <%= button_link_to Spree.t(:new_gift_card), new_object_url, { :class => "btn-success", :icon => 'add', :id => 'admin_new_gift_card' } %>
  <% end %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @gift_card } %>
<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li do %>
      <%= link_to_with_icon 'off', Spree.t(:activate), '#' %>
    <% end unless @gift_card.activated? %>
    <%= content_tag :li do %>
      <%= link_to_with_icon 'send', Spree.t(:resend_email), '#' %>
    <% end %>
    <%= content_tag :li do %>
      <%= link_to_with_icon 'remove', Spree.t(:destroy), admin_gift_card_path(@gift_card), method: :delete, confirm: 'Are you sure?' %>
    <% end %>
  </ul>
<% end %>

<%= form_for [:admin, @gift_card], :method => :put, :html => { :multipart => true } do |f| %>
  <fieldset>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
