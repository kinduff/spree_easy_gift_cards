<% content_for :page_title do %>
  <%= Spree.t(:gift_cards) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_gift_card), new_admin_gift_card_url, :class => "btn-success", :icon => 'add', :id => 'admin_new_gift_card' %>
<% end if can? :create, Spree::GiftCard %>

<%= render partial: 'spree/admin/shared/index_table_options', locals: { collection: @collection } %>

<% if @collection.any? %>
  <table class="table" id="listing_products">
    <thead>
      <tr data-hook="admin_products_index_headers">
        <th><%= Spree.t(:activated) %></th>
        <th><%= Spree.t(:code) %></th>
        <th><%= Spree.t(:from_order) %></th>
        <th><%= Spree.t(:recipient_email) %></th>
        <th><%= Spree.t(:redeemed) %></th>
        <th><%= Spree.t(:amount) %></th>
        <th><%= Spree.t(:promotion) %></th>
        <th data-hook="admin_gift_cards_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each do |gift_card| %>
        <tr id="<%= spree_dom_id gift_card %>" data-hook="admin_gift_cards_index_rows" class="<%= cycle('odd', 'even') %>">
          <td class="activated">
            <% if gift_card.activated? %>
              <p><span class="label label-complete">Activated</span></p>
            <% else %>
              <p><span class="label label-error">Not Activated</span></p>
            <% end %>
          </td>
          <td class="code">
            <%= link_to (gift_card.code.nil? ? "Not yet generated" : gift_card.code), edit_admin_gift_card_path(gift_card) %>
          </td>
          <td class="from_order"><%= link_to gift_card.order.number, edit_admin_order_path(gift_card.order) %></td>
          <td class="recipient_email"><%= gift_card.try(:recipient_email) %></td>
          <td class="redeemed">
            <% if gift_card.try(:redeemed?) %>
              <p><span class="label label-complete">Redeemed</span></p>
            <% else %>
              <p><span class="label label-warning">Not Redeemed</span></p>
            <% end %>
          </td>
          <td class="amount"><%= Spree::Money.new(gift_card.try(:amount)) %></td>
          <td class="promotion"><%= gift_card.promotion ? link_to("Promotion", edit_admin_promotion_path(gift_card.promotion)) : "N/A" %></td>
          <td class="actions actions-3 text-right" data-hook="admin_gift_cards_index_row_actions">
            <%= link_to_edit gift_card, no_text: true, class: 'edit' if can?(:edit, gift_card) %>
            <%= link_to_delete gift_card, no_text: true if can?(:delete, gift_card) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::GiftCard)) %>,
    <%= link_to Spree.t(:add_one), new_object_url %>!
  </div>
<% end %>

<%= render partial: 'spree/admin/shared/index_table_options', locals: { collection: @collection } %>
